<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <title>RingCentral High Volume SMS</title>
    <link href="./img/favicon.ico" type="image/vnd.microsoft.icon" rel="shortcut icon">
    <link href="./img/favicon.ico" type="image/vnd.microsoft.icon" rel="icon">
    <script src="js/common.js" type="text/javascript"></script>
    <script src="js/conversations.js" type="text/javascript"></script>
    <script src="js/loadforms.js" type="text/javascript"></script>

    <script src="js/jquery-3.1.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.3/css/bootstrap-select.min.css">

    <link rel="stylesheet" type="text/css" href="css/ui.css">
    <link rel="stylesheet" type="text/css" href="css/conversation.css">
    <link rel="stylesheet" type="text/css" href="css/main.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.3/js/bootstrap-select.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap3-dialog/1.34.7/js/bootstrap-dialog.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap3-dialog/1.34.7/css/bootstrap-dialog.min.css">
    <script>
      window.phoneNumbers = '<%- JSON.stringify(phoneNumbers) %>'
      /*
      $(document).ready(function() {
        $('#send-text').on('keyup keypress', function() {
          $(this).height(0);
          $(this).height(this.scrollHeight);
        });
      });
      */
      $(document).ready(function(){
          $('[data-toggle="popover"]').popover();
      });
    </script>
</head>
<body onload="init()">
  <%- include('_feedback_form') %>
  <%- include('_menu_header') %>
  <div id="hidden-div-reply" style="display: none">
    <form id="send_reply_form">
        <div>
          <textarea id="text-message" cols=70 rows="4" autofocus placeholder="Enter text message..."></textarea>
        </div>
    </form>
  </div>

  <section id='content'>
    <div class="row col-lg-12">
      <%- include('_menu') %>
      <div id="control-list-col" class="col-lg-3 control-pane">
        <div id="col2-header" class="form-inline read-message-input-block">
          <div class="block_space">
            <label class="label-input" for="direction">Read</label>
            <select class="selectpicker filter-select" data-width="180" id="period" onchange="readMessageStore()" style="display: inline" title="Time Period">
              <option value="last-hour">Last hour</option>
              <option value="last-24hour" selected>Last 24 hours</option>
              <option value="last-seven-day">Last 7 days</option>
              <option value="between">Between</option>
            </select>
          </div>
          <div class="block_space" id="between-date" style="display: none">
            <span>From </span>
            <input type="text" id="fromdatepicker" size="10" class="form-control text-input"></input><span> To </span>
            <input type="text" id="todatepicker" size="10" class="form-control text-input"></input>
            <button id="readmessagestore" class="btn-rc" onclick="readMessageStore()" style="display:inline">Read</button>
          </div>
          <div class="block_space">
            <% if (phoneNumbers.length > 1) { %>
              <label class="label-input" for="my-numbers">From number</label>
              <select id="my-numbers" class="selectpicker filter-select" onchange="readMessageStore()" data-width="180" title="my numbers">
                <% var i=0 %>
                <% for (var item of phoneNumbers) { %>
                  <% if (i == 0) { %>
                    <option selected value="<%- item.number %>"><%= item.format %></option>
                  <% }else{ %>
                    <option value="<%- item.number %>"><%= item.format %></option>
                  <% }; i++ %>
                <% } %>
              </select>
            <% } %>
          </div>
          <div class="block_space">
            <label class="label-input" for="direction">Direction</label>
            <select class="selectpicker filter-select" onchange="readMessageStore()" data-width="100" id="direction" style="display: inline" title="Direction">
              <option value="Inbound">Inbound</option>
              <option value="Outbound">Outbound</option>
              <option value="Both" selected>Both</option>
            </select>
          </div>
        </div>
        <hr style="margin: 2px !important;border: 2px solid white"></hr>
        <div class="block_space">
          <input type="text" class="form-control search-input" placeholder="Search number" value="" id="search-number" onfocus="clearSearch(this)" oninput="searchRecipientNumber(this)"></input>
          <!--input type="text" class="form-control search-input" placeholder="Search name" value="" id="search-name" oninput="searchRecipientName(this)"></input-->
        </div>
        <div id="recipient-list" class="scrollable recipient-list"></div>
      </div>
      <div id="message-col" class="col-lg-7" style="background-color: #f5f6fb;">
        <div class="row col-xs-12" style="display:block;">
          <div class="col-lg-8">
            <div id="conversation-header" class="conversation-title" >
              <span id="conversation-title" style="float: left;">All conversations</span>

              <span style="float: right;">
                <span id="total"></span>
                <a id="next-block" href="#" style="display: none">next block</a>
              </span>
            </div>
            <div id="conversation"></div>
            <div id="message-input" style="display: none">
              <input type="text" id="send-text" style="height: 40px" size="auto" placeholder="Enter text here"></input>
            </div>
          </div>
          <div class="col-lg-4">
            <span class="block_space" id="downloads" style="display: none">
              <a href="javascript:downloadMessageStore('CSV')" style="display: inline">Download (CSV)</a><br>
              <a href="javascript:downloadMessageStore('JSON')" style="display: inline">Download (JSON)</a>
            </span>
          </div>
        </div>
      </div>
    </div>
  </section>
  <%- include('_footer') %>
</body>
</html>
