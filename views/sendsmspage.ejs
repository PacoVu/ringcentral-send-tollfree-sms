<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <title>RingCentral Toll-Free SMS</title>
    <link href="./img/favicon.ico" type="image/vnd.microsoft.icon" rel="shortcut icon">
    <link href="./img/favicon.ico" type="image/vnd.microsoft.icon" rel="icon">
    <script src="js/main.js" type="text/javascript"></script>
    <script src="js/jquery-3.1.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.3/css/bootstrap-select.min.css">
    <link rel="stylesheet" type="text/css" href="css/main.css">
    <link rel="stylesheet" type="text/css" href="css/ui.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.3/js/bootstrap-select.min.js"></script>
    <script>
      window.report = <%- JSON.stringify(sendReport) %>
    </script>
</head>
<body onload="init()">
  <nav id="menu_header" class="navbar navbar-default no-border">
    <span class="left-middle-align">
      <span class="rclogo"><a href="/"><img alt="Brand" src="img/ringcentral.png" height="40"></a></span>&nbsp;&nbsp;
      <span class="title">Send Toll-Free SMS</span>
    </span>
    <ul class="nav navbar-nav navbar-right middle-align">
      <li><span><b><%- userName %>&nbsp;&nbsp;</b></span></li>
      <li><a href="/about">&nbsp;&nbsp;Help</a></li>
      <li><span>&nbsp;|&nbsp;</span></li>
      <li><a href="#" onclick="logout()">Logout</a></li>
    </ul>
  </nav>
  <section id='content'>
    <div id="credentials_bar" class="form-inline">
      <form id="sms-form" class="form-group" action="/sendmessage" method="POST" enctype="multipart/form-data">
        <label class="label-input" for="from-number">From number</label>
          <select size="20" id="from-number" name="fromNumber" class="selectpicker filter-select">
            <% for (var item of phoneNumbers) { %>
              <option value="<%- item.number %>"><%= item.number %> - <%= item.type %></option>
            <% } %>
          </select></br>
        <label class="label-input" for="secret_access_key">To numbers (separated by a semi-colon)</label>
          <textarea rows="6" cols="50" id="to-numbers" name="recipients" class="form-control text-input" ></textarea>&nbsp;&nbsp;
          <span class="msg-label">Or, upload CSV file</span>
          <input type="file" size="30" id="attachment" name=attachment style="display:inline"></input>
        </br>
        <label class="label-input" for="message">Message</label>
          <textarea rows="4" cols="50" id="message" name="message" class="form-control text-input" ></textarea>&nbsp;&nbsp;
        <button type="submit" id="send-message" class="btn-rc" style="display:inline">Send</button>
      </form>
    </div>
    </br>
    <div id="control_panel" style="display: none">
    <!--
      <input type="number" size="3" id="time_interval" style="display:inline"></input>&nbsp;&nbsp;
      <button id="increase_time_interval" class="btn-rc" onclick="pause_resume()" style="display:inline">Pause</button>&nbsp;&nbsp;
    -->
      <button id="pause_resume" class="btn-rc" onclick="pause_resume()" style="display:inline">Pause</button>
      &nbsp;&nbsp;
      <button id="cancel" class="btn-rc" onclick="confirmCancel()" style="display:inline">Cancel</button>
    </div>
    <div id="progress" class="hide">
      <span><b>Send SMS progress</b></span>&nbsp;&nbsp;
      <img src='./img/sendprogress.gif' id="sendingAni" style='width:50px;height:30px;display: none'></img>
      <div id="time"></div>
      <div id="success"></div>
      <div id="failure"></div>
      <a id="download" href="javascript:downloadReport()" style="display: none">Download Detailed Report</a>
      <!--
      <span><b>Failure details:</b></span>
      <div id="invalid-numbers" style="display:inline"></div>
      -->
    </div>
  </section>
  <%- include('_footer') %>
</body>
</html>
