<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <title>RingCentral Toll-Free SMS</title>
    <link href="./img/favicon.ico" type="image/vnd.microsoft.icon" rel="shortcut icon">
    <link href="./img/favicon.ico" type="image/vnd.microsoft.icon" rel="icon">

    <script src="js/a2psms.js" type="text/javascript"></script>

    <script src="js/jquery-3.1.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.3/css/bootstrap-select.min.css">
    <link rel="stylesheet" type="text/css" href="css/main.css">
    <link rel="stylesheet" type="text/css" href="css/ui.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.3/js/bootstrap-select.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap3-dialog/1.34.7/js/bootstrap-dialog.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap3-dialog/1.34.7/css/bootstrap-dialog.min.css">

    <script>
      window.sendReport = '<%- JSON.stringify(sendReport) %>'
    </script>

</head>
<body onload="init()">
  <div id="hidden-div-feedback" style="display: none">
    <form id="send_feedback_form">
        <span class="control-label">How was your experience?</span>
          &nbsp;&nbsp;
          <label>
            <input type="radio" name="emoji" value="positive" checked/>
            <img src="./img/positive.png">
          </label>
          &nbsp;&nbsp;
          <label>
            <input type="radio" name="emoji" value="neutral"/>
            <img src="./img/neutral.png">
          </label>
          &nbsp;&nbsp;
          <label>
            <input type="radio" name="emoji" value="negative"/>
            <img src="./img/negative.png">
          </label>
        </br></br>
        <div>
          <textarea id="free_text" cols=70 rows="5" placeholder="Describe your experience here..."></textarea>
        </div>
        <span>Type: </span>
        <select class="selectpicker filter-select" id="feedback_type">
          <option value="Bug report" selected>Bug</option>
          <option value="Suggestion">Suggestion</option>
          <option value="Others">Others</option>
        </select>
      <!--div class="form-group"></div-->
    </form>
  </div>

  <nav id="menu_header" class="navbar navbar-default no-border">
    <span class="left-middle-align">
      <span class="rclogo"><a href="/"><img alt="Brand" src="img/ringcentral.png" height="40"></a></span>&nbsp;&nbsp;
      <span class="title">Send Toll-Free SMS</span>
    </span>
    <ul class="nav navbar-nav navbar-left middle-align">
      <li>
        <button onclick="openWindow()" class="btn-noborder">Report Issues</button>
      </li>
      <li><span>&nbsp;|&nbsp;</span></li>
      <li><!--span><a href="javascript:openFeedbackForm()"><b>Feedback</b></a></span-->
        <button onclick="openFeedbackForm()" class="btn-noborder">Feedback</button>
      </li>
    </ul>
    <ul class="nav navbar-nav navbar-right middle-align">
      <li><span><b><%- userName %></b></span></li>
      <li><a href="/loadoptionpage">&nbsp;&nbsp;Option</a></li>
      <li><span>|</span></li>
      <li><a href="/about">&nbsp;&nbsp;Help</a></li>
      <li><span>|</span></li>
      <li><a href="#" onclick="logout()">Logout</a></li>
    </ul>
  </nav>
  <section id='content'>
    <div class="col-xs-12">
    <div class="col-sm-3"></div>
    <div class="col-sm-9">
      <div id="get-input" class="form-inline">
        <form id="sms-form" class="form-group" action="/sendhighvolumemessage" method="POST" enctype="multipart/form-data">
          <div>
            <label class="label-input" for="from-number">From number</label>
            <select size="20" id="from-number" name="fromNumber" class="selectpicker filter-select" required>
              <% for (var item of phoneNumbers) { %>
                <option value="<%- item.number %>"><%= item.format %> - <%= item.type %></option>
              <% } %>
            </select>&nbsp;&nbsp;
            <button id="send-message" class="btn-rc" style="display:inline">Send</button>
          </div>
          <div>
            <input type="text" id="group_index" name="group_index" hidden value="1"></input>
            <label class="label-input">To numbers</label>
            <textarea rows="6" cols="14" id="to-numbers_1" name="recipients_1" placeholder="+11234567890&#10;+14087654322&#10;+16501234567" class="form-control text-input" required></textarea>
            &nbsp;&nbsp;
            <label class="label-column">Or, load from .csv file (single column with header row)</br>
              <input type="file" onchange="fileSelected(this, 1);"></input>
            </label>
          </div>
          <div>
            <label class="label-input" for="message">Message</label>
            <textarea rows="4" cols="50" id="message" name="message_1" class="form-control text-input" required></textarea>&nbsp;&nbsp;
          </div>
          </br>
          <div>
            <label class="label-input" for="expires_in">Expires in:</label>
            <input type="number" name="expiresIn" step=10 size=3 min=0 max=10000 value=0></input>&nbsp;&nbsp;
            <label for="send_at">Send at:</label>&nbsp;&nbsp;
            <input type="datetime-local" id="senddatepicker" size=10 name="sendAt"></input>
          </div>
          <hr></hr>
          <div>
            <button class="btn-rc" onclick="addRecipientGroup()">Add recipient group</button>
            <div id="groups_tab"></div>
          </div>
          <div id="groups" class="scrollable"></div>
        </form>
      </div>
      </br>
      <% if (sendReport["sendInProgress"] == true) { %>
      <div id="progress" class="show">
        <span><b>Send SMS Report</b></span>&nbsp;&nbsp;
        <div id="report"><%- JSON.stringify(sendReport["status"]) %></div>
      </div>
      <% } %>
    </div>
  </div>
  </section>
  <%- include('_footer') %>
</body>
</html>
